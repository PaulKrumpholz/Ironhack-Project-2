<form action="/auth/signup" method="POST" id="form-container">

  <br><br>
<div class="container-signup">
<div class="md-form">
  <i class="fas fa-user prefix"></i>
  <input name="username" type="text" id="inputIconEx2" class="form-control" placeholder="Username" style="width: 160px;">
  <label for="inputIconEx2"></label>
</div>

  
  <br><br>
  
  <div class="md-form">
  <i class="fas fa-lock prefix"></i>
  <input name="password" type="password" id="myPasswordSignup" class="form-control validate" placeholder="Password" style="width: 160px;">
   <i class="fas fa-eye"  onmouseover="mouseoverPassSignup();" onmouseout="mouseoutPassSignup();"></i>
     <label for="myPasswordSignup" data-error="wrong" data-success="right"></label>
      <button id="signupButton" type="submit" class="btn btn-dark">Create Account</button>
       {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
</div>
  <br>




 
 
  <p class="account-message">
    
    
  </p>
</form>
