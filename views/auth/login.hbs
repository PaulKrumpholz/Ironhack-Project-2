
<form action="/auth/login" method="POST" id="form-container">

  <br><br>

  <input id="username" type="text" name="username" placeholder="Username or mail">

  <br><br>

  <input type="password" name="password" id="myPassword" size="20" placeholder="Password" />
  <i class="far fa-eye"onmouseover="mouseoverPass();" onmouseout="mouseoutPass();"></i>
  <br><br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  
  <br><br>

  <div class="wrapper">
  <button id="loginButton" type="submit" class="btn btn-outline-dark">Login</button>
</div>
  
  <br><br>

  <p id="acc-message" class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
</form>
