
<form action="/auth/login" method="POST" id="form-container">

  <br><br>

<!-- Material input -->
<div class="md-form">
  <i class="fas fa-user prefix"></i>
  <input type="text" id="inputIconEx2" class="form-control" placeholder="Email or Username" style="width: 160px;">
  <label for="inputIconEx2"></label>
</div>
  

  <br><br>
<!-- Material input -->
<div class="md-form">
  <i class="fas fa-lock prefix"></i>
  <input type="password" id="myPasswordLogin" class="form-control validate" placeholder="Password" style="width: 160px;">
  <i class="fas fa-eye" onmouseover="mouseoverPassLogin();" onmouseout="mouseoutPassLogin();"></i>
  <label for="myPasswordLogin" data-error="wrong" data-success="right"></label>
  </div>

  <br><br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  
  <br><br>

  <div class="wrapper">
  <button id="loginButton" type="submit" class="btn btn-outline-dark">Login</button>
</div>
  
  <br><br>

  <p id="acc-message" class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
</form>
