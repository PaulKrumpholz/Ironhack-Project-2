<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h2>Upload your Meme</h2>
      <form action="/auth/upload" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Name of Meme...">
        <br>
        <input type="file" name="photo" class="btn btn-primary my-2">
        <br>
        <input type="text" name="description" placeholder="Meme Description...">
        <br>
        <input type="submit" value="upload" class="btn btn-primary my-2">
      </form>
    </div>
  </section>

  {{#each memes}}
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4 shadow-sm">
            <p class="card-text"><a href="/user/{{_owner._id}}">{{_owner.username}}</a></p>              
            <img src="{{path}}" class="img-fluid"  width="100%" height="225"/>
            <div class="card-body">
              <p class="card-text">{{name}}</p>              
              <p class="card-text">{{description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Like</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Favourite</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Comment</button>                  
                </div>
              </div>
            </div>
          </div>
        </div>  
      </div>
    </div>
  </div>
  {{/each}}

</main>




